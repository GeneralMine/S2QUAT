// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// Action

model Action {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  action    String
  entitiyID Int?
  original  String?
  changes   String?
  exception String?

  status      ActionStatus   @default(FEHLER)
  entitiyName ActionEntitiy?
}

enum ActionStatus {
  ERFOLG
  FEHLER
  LAUFEND
}

enum ActionEntitiy {
  ANSWER
  ATTRIBUTE
  CATEGORY
  COMPANY
  CRITERIA
  FACTOR
  FIELD
  PAGE
  PROJECT
  QUESTION
  RESPONSE
  SCENARIO
  SURVEY
  TEMPLATE
  TESTPERSON
  USER
}

// User

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  email       String   @unique
  name        String
  password    String
  last_logout DateTime @default(now())

  status UserStatus @default(AKTIV)
  rolle  UserRolle  @default(USER)

}

enum UserStatus {
  AKTIV
  DEAKTIVIERT
  NICHT_VERIFIZIERT
}

enum UserRolle {
  USER
  EDITOR
  ADMIN
}

// Project

model Project {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name          String
  beschreibung  String?
  ziel          String?
  Project_start DateTime
  Project_end   DateTime

  status ProjectStatus @default(AKTIV)
}

enum ProjectStatus {
  AKTIV
  INAKTIV
  ARCHIVIERT
}

// Company

model Company {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name String
  logo String?
}

// Scenario

model Scenario {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name         String
  beschreibung String?
}

// Survey

model Survey {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name         String
  beschreibung String?
  reihenfolge  Int     @default(0)

  status SurveyStatus @default(AKTIV)
}

enum SurveyStatus {
  AKTIV
  GESCHLOSSEN
}

// Response

model Response {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  ort      String?
  feedback String?
  notizen  String?

  typ ResponseType @default(VALID)
}

enum ResponseType {
  VALID
  INVALID
}

// TestPerson

model TestPerson {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name      String
  signature Boolean
  age       Int?
}

enum TestPersonSex {
  MALE
  FEMALE
  NOT_BINARY
}
